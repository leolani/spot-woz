factors:
  - name: playerCount
    desc: playerCount determines the number of Players are in a Game.
    values:
      - value: 1
  - name: history
    desc: History factor to use in the disambiguator
    values:
      - value: 0.0
      - value: 1.0
  - name: basePath
    desc: Base path for the spot-woz application, determined by routing on the server, like /spottergame
    values:
      - value: ''
  - name: baseUrl
    desc: Full base URL of the spot-woz application as seem from outside (with trailing slash), like https://spotter.labs.vu.nl/spottergame/
    values:
      - value: 'http://localhost:'
  - name: image
    desc: Docker image name
    values:
      - value: numblr/spotter-empirica:server
  - name: maxPort
    desc: Maximum port to use for docker containers
    values:
      - value: 8100
  - name: minPort
    desc: Minimum port to use for docker containers
    values:
      - value: 8110
  - name: storage
    desc: Storage location
    values:
      - value: ./storage/
treatments:
  - name: noHistory
    desc: Game not using history
    factors:
      basePath: ''
      baseUrl: 'http://localhost:'
      image: numblr/spotter-empirica:latest
      maxPort: 8110
      minPort: 8100
      playerCount: 1
      storage: /home/spotter/storage/
      history: 0.0
  - name: history
    desc: Game using history
    factors:
      basePath: ''
      baseUrl: 'http://localhost:'
      image: numblr/spotter-empirica:latest
      maxPort: 8110
      minPort: 8100
      playerCount: 1
      storage: ./storage/
      history: 1.0s